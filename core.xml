<theme>
	<formatVersion>4</formatVersion>

	<include>./_skins/neon/skin.xml</include>
	<!-- 
		core
		blueprint
		chalk
		sketch
		neon
	-->

	<view name="system, basic, detailed, video">

		<image name="background" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
		</image>

		<image name="border" extra="true">
			<size>1 1</size>
			<pos>0 0</pos>
		</image>

		<helpsystem name="help">
			<pos>0.020 0.94</pos>
		</helpsystem>

	</view>

	<feature supported="carousel">

		<view name="system">

			<image name="console" extra="true">
				<maxSize>0.325 0.43</maxSize>
				<pos>0.665 0.45</pos>
				<origin>0.5 0.5</origin>
			</image>

			<carousel name="systemcarousel">
				<type>vertical</type>
				<pos>0.01 0.02</pos>
				<size>0.32 0.88</size>
				<color>FFFFFF00</color>
				<logoScale>1</logoScale>
				<logoSize>0.12 0.30</logoSize>
				<maxLogoCount>5</maxLogoCount>
			</carousel>

			<text name="systemInfo">
				<pos>0.35 0.84</pos>
				<size>0.63 0.06</size>
				<backgroundColor>FFFFFF00</backgroundColor>
			</text>

		</view>

	</feature>

	<view name="basic, detailed, video">

		<image name="logo">
			<maxSize>0.30 0.12</maxSize>
			<pos>0.17 0.10</pos>
			<origin>0.5 0.5</origin>
		</image>

		<textlist name="gamelist">
			<size>0.30 0.66</size>
			<pos>0.02 0.22</pos>
			<horizontalMargin>0.01</horizontalMargin>
			<alignment>left</alignment>
		</textlist>

	</view>

	<view name="basic">

		<image name="console" extra="true">
			<maxSize>0.325 0.43</maxSize>
			<pos>0.665 0.45</pos>
			<origin>0.5 0.5</origin>
		</image>

	</view>

	<view name="detailed, video">

		<image name="console" extra="true">
			<pos>1 1</pos>
		</image>

		<text name="md_description">
			<size>0.30 0.53</size>
			<pos>0.68 0.04</pos>
		</text>

		<text name="md_lbl_players, md_lbl_releasedate, md_lbl_playcount, md_lbl_lastplayed, md_lbl_developer, md_lbl_publisher, md_players, md_playcount">
			<size>0.10 0.05</size>
			<alignment>right</alignment>
			<lineSpacing>1.0</lineSpacing>
		</text>

		<text name="md_players, md_playcount">
			<alignment>left</alignment>
		</text>

		<text name="md_developer, md_publisher">
			<lineSpacing>1.0</lineSpacing>
			<size>0.30 0.05</size>
		</text>

			<text name="md_lbl_rating, md_lbl_genre">
				<pos>1 1</pos>
			</text>

				<text name="md_genre">
					<size>0.63 0.07</size>
					<pos>0.35 0.63</pos>
				</text>

			<text name="md_lbl_players">
				<pos>0.35 0.71</pos>
			</text>
				<text name="md_players">
					<pos>0.46 0.71</pos>
				</text>

			<text name="md_lbl_lastplayed">
				<pos>0.35 0.77</pos>
			</text>
			
				<datetime name="md_lastplayed">
					<size>0.10 0.05</size>
					<pos>0.46 0.77</pos>
				</datetime>

			<text name="md_lbl_playcount">
				<pos>0.35 0.83</pos>
			</text>
				<text name="md_playcount">
					<pos>0.46 0.83</pos>
				</text>

			<text name="md_lbl_developer"> 
				<pos>0.57 0.71</pos>
			</text>
				<text name="md_developer">
					<pos>0.68 0.71</pos>
				</text>

			<text name="md_lbl_publisher"> 
				<pos>0.57 0.77</pos>
			</text>
				<text name="md_publisher">
					<pos>0.68 0.77</pos>
				</text>

			<text name="md_lbl_releasedate"> 
				<pos>0.57 0.83</pos>
			</text>
				<datetime name="md_releasedate">
					<pos>0.68 0.83</pos>
					<size>0.30 0.05</size>
				</datetime>

		<rating name="md_rating">
			<size>0.9 0.03</size>
			<pos>0.89 0.935</pos>
		</rating>

	</view>

	<view name="detailed">

		<image name="md_image">
			<maxSize>0.30 0.53</maxSize>
			<pos>0.50 0.305</pos>
			<origin>0.5 0.5</origin>
		</image>

	</view>

	<feature supported="video">

		<view name="video">

			<!-- Normal Users that just have a logo as the marquee -->
			<video name="md_video">
				<maxSize>0.30 0.53</maxSize>
				<pos>0.50 0.57</pos>
				<origin>0.5 1</origin>
				<delay>1</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<maxSize>0.30 0.14</maxSize>
				<pos>0.50 0.04</pos>
				<origin>0.5 0</origin>
			</image>

			<image name="md_image">
				<maxSize>0.30 0.53</maxSize>
				<pos>0.50 0.57</pos>
				<origin>0.5 1</origin>
			</image>

